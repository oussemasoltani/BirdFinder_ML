<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SignUp">


    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/graphikbold"
        android:gravity="center"
        android:text="Hello Bird Lover Come Join Us !!"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/origami" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/graphikbold"
        android:text="Saisir votre email"
        android:textSize="20sp" />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/emailSig"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphikbold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/graphikbold"
        android:text="Mot de passe"
        android:textSize="20sp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/passwordSig"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/graphikbold"
        android:text="Mot de passe"
        android:textSize="20sp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/repasswordSig"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btnS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF1464"
        android:text="Sign In" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/graphikmedium"
        android:text="Login"
        android:textSize="20dp"

    />

</LinearLayout>